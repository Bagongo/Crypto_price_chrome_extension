{
    "name": "BTC price",
    "version": "1.1.0",
    "description": "Shows BTC price on the extension icon (badge) and top coins prices in popup",
    "manifest_version" : 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "imgs/btc_logo.png"
    },
    "background": {
        "service_worker": "background.js"
      },
      "permissions": [
        "storage"
      ],
      "host_permissions": [
        "https://api.coingecko.com/"
      ],
      "icons": {
        "16": "imgs/btc_logo.png",
        "32": "imgs/btc_logo.png",
        "48": "imgs/btc_logo.png",
        "128": "imgs/btc_logo.png"
    }
}